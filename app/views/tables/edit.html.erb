<% if current_user.id.to_s != @admin_id %>
  <div class="text-danger text-center h3 mt-3">
    Você não tem permissão para estar aqui
  </div>
<% else %>
  <div class="container pt-2">
    <div class="row pt-1 align-self-center">
      <div class="col pt-5">
        <h4
          align="center"
          class="text-dark font-weight-bold mb-3">
          Integrantes
        </h4>
        <div class="d-flex justify-content-center">
          <div class="card" style="width: 20rem">

            <div class="card-header bg-primary text-white">
              <h5><%= @members[0][:table_name].capitalize %></h5>
            </div>

            <ul class="list-group list-group-flush">

              <li class="list-group-item">
                <div class="row">

                  <label class="col text-left">Mestre </label>
                  <% if @members[0][:master] %>
                    <label class="col text-left">Campanhas <br> Mestradas </label>
                  <% else %>
                    <label class="col text-left">Não há um mestre nessa mesa...<br> não ainda...</label>
                  <% end %>
                </div>
              </li>

              <% if @members[0][:master] %>
                <li class="list-group-item">
                  <div class="row">

                    <div class="col">
                      <%= @members[0][:user_name].capitalize %>
                    </div>

                    <div class="col-auto">
                      <button type="button" class="btn btn-default btn-sm"
                              data-toggle="modal" data-target="#Master">
                        <i class="material-icons text-primary">clear</i>
                      </button>
                    </div>

                    <div class="col text-right">
                      <%= @members[0][:campaigns].to_i %>
                    </div>

                  </div>
                </li>
              <% end %>

              <li class="list-group-item">

                <div class="row">
                  <label class="col text-left mt-3">Jogadores </label>
                  <% if @members[1].size != 0 %>
                    <label class="col text-left">Campanhas <br> Jogadas </label>
                    <% else %>
                    <label class="col text-left">Parece que nenhum outro
                      aventureiro se ajuntou esta aventura </label>
                  <% end %>
                </div>

              </li>
              <% if @members[1] %>
                <% @members[1].each do |m| %>
                  <li class="list-group-item">
                    <div class="row">

                      <div class="col">
                        <%= m.name.capitalize %>
                      </div>

                      <div class="col">
                        <button type="button" class="btn btn-default btn-sm"
                                data-toggle="modal" data-target="#ModalPlayer<%= m.id.to_s %>">
                          <i class="material-icons text-primary">clear</i>
                        </button>
                      </div>

                      <div class="col text-right">
                        <%= m.campaigns.to_i %>
                      </div>

                    </div>
                <% end %>
                </li>
              <% end %>

            </ul>

            <div class="modal fade" id="Master" tabindex="-1" role="dialog"
                 aria-labelledby="MasterLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">

                    <h5 class="modal-title" id="MasterLabelTitle">Você tem certeza?!</h5>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>

                  </div>

                  <div class="modal-body">
                    Deseja remover esse mestre da sua mesa?
                  </div>

                  <div class="modal-footer">

                    <button type="button" class="btn btn-dark btn-to-left" data-dismiss="modal">FECHAR</button>

                    <button type="button" class="btn btn-primary">REMOVER</button>

                  </div>
                </div>
              </div>
            </div>

            <% @members[1].each do |m| %>
              <div class="modal fade " id="ModalPlayer<%= m.id.to_s %>"
                   tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                   aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">

                      <h5 class="modal-title"
                          id="exampleModalLabel">
                        Você tem certeza?!
                      </h5>

                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>

                    </div>

                    <div class="modal-body">
                      Deseja remover esse jovem aventureiro da sua mesa?
                    </div>

                    <div class="modal-footer">

                      <button type="button" class="btn btn-dark btn-to-left" data-dismiss="modal">FECHAR</button>

                      <button type="button" class="btn btn-primary">Save changes</button>

                    </div>

                  </div>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<style>

  .btn-to-left {
    position: absolute;
    left: 16px;
  }

</style>
